<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.adi.catalogoatc.fragmentos.AbonosFragment">

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fecha"
        android:id="@+id/txtFecha"
        android:layout_alignBottom="@+id/edtFecha"
        android:layout_alignParentStart="true"
        android:textSize="18dp"/>

    <EditText
        android:id="@+id/edtFecha"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="43dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/txtFecha"
        android:layout_marginTop="13dp"
        android:hint="Fecha"
        android:inputType="date"
        android:focusable="false"
        android:clickable="true"
        android:maxLines="1" />


        />
    <ImageButton
        android:id="@+id/BuscarAbono"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/buscar"
        android:scaleType="fitCenter"
        android:layout_alignTop="@+id/edtFecha"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="18dp" />

    <ListView
        android:id="@+id/lvAbonos"
        android:layout_below="@+id/BuscarAbono"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >

    </ListView>
</RelativeLayout>
