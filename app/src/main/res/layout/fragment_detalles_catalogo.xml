<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context="com.example.adi.catalogoatc.fragmentos.DetallesCatalogoFragment">

   <ImageView
       android:layout_width="300dp"
       android:layout_height="300dp"
       android:layout_centerHorizontal="true"
       android:id="@+id/imgArticulo"
       android:src="@drawable/catalogo"/>

   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:id="@+id/MarcaDetalles"
       android:layout_below="@+id/imgArticulo"
       android:text="Marca"
       />
   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:id="@+id/ModeloDetalles"
       android:layout_below="@+id/MarcaDetalles"
       android:text="Modelo"

       />
   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:id="@+id/PrecioDetalles"
       android:layout_below="@+id/ModeloDetalles"
       android:text="Marca"
       />

</RelativeLayout>
