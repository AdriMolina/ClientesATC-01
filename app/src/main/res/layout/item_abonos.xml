<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <android.support.v7.widget.CardView
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        app:cardBackgroundColor="@android:color/background_light">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txtFechaAbono"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fecha"
                android:textSize="25dp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/txtFolioAbono"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Folio"
                android:textSize="18dp"
                android:textStyle="bold"
                android:layout_below="@+id/txtFechaAbono"/>
            <TextView
                android:id="@+id/txtCantidadAbono"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cantidad"
                android:textSize="15dp"
                android:layout_marginRight="10dp"
                android:layout_below="@+id/txtFolioAbono"/>
            <TextView
                android:id="@+id/txtTotalMomento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CantidadMomento"
                android:textSize="15dp"
                android:layout_below="@+id/txtCantidadAbono"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="25dp"
                android:layout_marginTop="15dp"
                android:textStyle="bold"/>




        </RelativeLayout>












    </android.support.v7.widget.CardView>

</RelativeLayout>